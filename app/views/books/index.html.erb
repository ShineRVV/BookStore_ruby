<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Author</th>
      <th>Publish</th>
      <th>Photo</th>
      <th>Content</th>
      <th>Weight</th>
      <th>Size</th>
      <th>Pages</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.category_id %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.publish_id %></td>
        <td><%= book.photo %></td>
        <td><%= book.content %></td>
        <td><%= book.weight %></td>
        <td><%= book.size %></td>
        <td><%= book.pages %></td>
        <td><%= book.date %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

